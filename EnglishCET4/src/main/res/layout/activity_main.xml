<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
 
    <FrameLayout
        android:id="@id/main_layout_frame_content"
        android:layout_width="wrap_content"
        android:layout_height="0dip" 
        android:layout_weight="1" /> 
   <!-- <ProgressBar
        android:id="@id/dialog_loading_progressbar_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/> -->
    <LinearLayout 
        android:layout_width="match_parent"  
        android:layout_height="65dip"
        android:background="@color/main_layout_bg">
	         <RelativeLayout  
	            android:id="@id/main_layout_relativelayout_words"  
	            android:layout_width="0dp"  
	            android:layout_height="match_parent"  
	            android:layout_weight="1" >
		        <LinearLayout
				   android:layout_width="match_parent"  
	                android:layout_height="match_parent"
	                android:layout_centerVertical="true"  
	                android:gravity="center"
	                android:orientation="vertical"
					>
			    	<ImageView
			    	    android:id="@id/main_layout_button_words"
			    	    android:layout_width="30dp"
			    	    android:layout_height="30dp"
			    	    android:background="@mipmap/bottom_button_words_normal"
						/>
			    	<TextView 
			    	    android:id="@id/main_layout_textview_words"
			    	    android:layout_width="wrap_content"
			    	    android:layout_height="wrap_content"
			    	    android:text="@string/bottom_button_words"
			    	    android:layout_marginTop="2dip"
						android:textSize="14sp"
			    	    android:textColor="@color/bottom_textview_normal"/>
				</LinearLayout>
			</RelativeLayout>

		<RelativeLayout
			android:id="@+id/main_layout_relativelayout_video"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1" >
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_centerVertical="true"
				android:orientation="vertical"
				android:gravity="center">
				<ImageView
					android:id="@+id/main_layout_button_video"
					android:layout_width="30dp"
					android:layout_height="30dp"
					android:src="@mipmap/bottom_button_video_normal"/>
				<TextView
					android:id="@+id/main_layout_textview_video"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="2dip"
					android:text="教程"
					android:textColor="@color/bottom_textview_normal"/>
			</LinearLayout>
		</RelativeLayout>

		<RelativeLayout
		            android:id="@id/main_layout_relativelayout_search"  
		            android:layout_width="0dp"  
		            android:layout_height="match_parent"  
		            android:layout_weight="1" >
		       <LinearLayout
				   android:layout_width="match_parent"  
	                android:layout_height="match_parent"
	                android:layout_centerVertical="true"  
	                android:orientation="vertical"
	                android:gravity="center">
			    	<ImageView 
			    	    android:id="@id/main_layout_button_search"
			    	    android:layout_width="30dp"
			    	    android:layout_height="30dp"
			    	    android:background="@mipmap/bottom_button_search_normal"/>
			    	<TextView 
			    	    android:id="@id/main_layout_textview_search"
			    	    android:layout_width="wrap_content"
			    	    android:layout_height="wrap_content"
			    	    android:layout_marginTop="2dip"
			    	    android:text="@string/bottom_button_search"
			    	    android:textColor="@color/bottom_textview_normal"/>
				</LinearLayout>
			</RelativeLayout>	
			

	        <RelativeLayout  
		            android:id="@id/main_layout_relativelayout_unknown"  
		            android:layout_width="0dp"  
		            android:layout_height="match_parent"  
		            android:layout_weight="1">
		       <LinearLayout
				   android:layout_width="match_parent"  
	                android:layout_height="match_parent"
	                android:layout_centerVertical="true"  
	                android:orientation="vertical"
	                android:gravity="center">
			    	<ImageView 
			    	    android:id="@id/main_layout_button_unknown"
			    	    android:layout_width="30dp"
			    	    android:layout_height="30dp"
			    	    android:background="@mipmap/bottom_button_newword_normal"/>
			    	<TextView 
			    	    android:id="@id/main_layout_textview_unknown"
			    	    android:layout_width="wrap_content"
			    	    android:layout_height="wrap_content"
			    	    android:layout_marginTop="5dip"
			    	    android:text="@string/bottom_button_newword"
			    	    android:textColor="@color/bottom_textview_normal"/>
			    	</LinearLayout>
			</RelativeLayout>	
			
	        <RelativeLayout
	            android:id="@id/main_layout_relativelayout_setting"  
	            android:layout_width="0dp"  
	            android:layout_height="match_parent"  
	            android:layout_weight="1">
		       <LinearLayout
				   android:layout_width="match_parent"  
	                android:layout_height="match_parent"
	                android:layout_centerVertical="true"  
	                android:orientation="vertical"
	           		android:gravity="center">
			  		<ImageView 
			    	    android:id="@id/main_layout_button_setting"
			    	    android:layout_width="30dp"
			    	    android:layout_height="30dp"
			    	    android:src="@mipmap/bottom_button_setting_normal"/>
			    	<TextView  
			    	    android:id="@id/main_layout_textview_setting"
			    	    android:layout_width="wrap_content"
			    	    android:layout_height="wrap_content"
			    	    android:text="@string/bottom_button_setting"
			    	    android:layout_marginTop="5dip"
			    	    android:textColor="@color/bottom_textview_normal"/>
		       </LinearLayout>
			</RelativeLayout>	 	
		           
    </LinearLayout>
    
</LinearLayout>
